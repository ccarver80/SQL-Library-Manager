extends layout

block content
  h1 Books 
  p 
    a.button(href='new-book') Create New Book 
  table 
    thread 
      tr 
        th Title 
        th Author 
        th Genre 
        th Year 
      tbody
        each book in Books  
          tr 
            td
              a(href="update-book/" + book.id)= book.title
              td= book.author
              td= book.genre
              td= book.year